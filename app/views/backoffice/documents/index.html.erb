<%= render "partials/profile" do %>
  <div class="card">
    <div class="card-header">
      Meus Documentos
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Documento</th>
            <th scope="col">Situação</th>
            <th scope="col">Versão</th>
            <th scope="col">Último envio</th>
            <th scope="col">Visualizar</th>
          </tr>
        </thead>
        <tbody>
          <% if @user.documents.empty? -%>
            <tr>
              <td colspan="3">
                <div class="d-flex justify-content-center">
                  <span>Você ainda não tem documentos registrados</span>
                </div>
              </td>
            </tr>
          <% else -%>
            <% @user.documents.each do |doc| -%>
              <tr>
                <td><%= doc.created_at %></td>
                <td><%= item.image_data %></td>
                <td>
                  <% if item.approved %>
                    <label class="badge rounded-pill bg-success">Aprovado</label>
                  <% else %>
                    <label class="badge rounded-pill bg-danger">Negado</label>
                  <%- end %>
                </td>
              </tr>
            <%- end -%>
          <% end -%>
        </tbody>
      </table>
    </div>
  </div>
<%- end %>
